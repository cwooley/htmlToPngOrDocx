{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "pretty": true,
        "sourceMap": true,
        "target": "ES6",
        "outDir": "./dist",
        "baseUrl": ".",
        "allowSyntheticDefaultImports": true,
        "lib": ["es2017", "dom"],
        "typeRoots": [
            "src/@types",
            "./node_modules/@types"
        ],
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}